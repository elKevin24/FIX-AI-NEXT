# ===========================================
# DATABASE CONFIGURATION (Prisma + PostgreSQL)
# ===========================================

# Connection URL for runtime (pooled connection - recommended for serverless)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Direct connection URL for migrations (non-pooled)
DIRECT_DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ===========================================
# AUTHENTICATION (Stack Auth / NextAuth)
# ===========================================

# Stack Auth project credentials
NEXT_PUBLIC_STACK_PROJECT_ID=your-project-id
NEXT_PUBLIC_STACK_PUBLISHABLE_CLIENT_KEY=pck_your-publishable-key
STACK_SECRET_SERVER_KEY=ssk_your-secret-key

# ===========================================
# EMAIL SERVICE (Resend)
# ===========================================

# Resend API key for transactional emails
RESEND_API_KEY=re_your-api-key

# Email sender address
EMAIL_FROM='FIX-AI <noreply@yourdomain.com>'
