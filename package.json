{
  "name": "workshop-app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bash start-dev.sh",
    "dev:next": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "test": "vitest run",
    "db:start": "docker compose up -d",
    "db:stop": "docker compose down",
    "db:reset": "docker compose down -v && docker compose up -d",
    "db:seed": "npx prisma db seed",
    "db:migrate": "npx prisma migrate dev",
    "db:studio": "npx prisma studio",
    "neon:migrate": "dotenv -e .env.neon -- npx prisma migrate deploy",
    "neon:seed": "dotenv -e .env.neon -- npx prisma db seed",
    "neon:superadmin": "dotenv -e .env.neon -- npx tsx scripts/seed-superadmin.ts",
    "neon:studio": "dotenv -e .env.neon -- npx prisma studio"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/client": "^5.22.0",
    "@react-pdf/renderer": "^4.3.1",
    "@types/swagger-ui-react": "^5.18.0",
    "bcryptjs": "^2.4.3",
    "next": "^16.0.7",
    "next-auth": "^5.0.0-beta.30",
    "next-swagger-doc": "^0.4.1",
    "pnpm": "^10.24.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1",
    "swagger-ui-react": "^5.30.3",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/react": "^16.3.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "dotenv-cli": "^11.0.0",
    "eslint": "^9.39.1",
    "eslint-config-next": "^16.0.7",
    "jsdom": "^27.3.0",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "typescript": "^5",
    "vercel": "^49.1.1",
    "vitest": "^4.0.15"
  },
  "overrides": {
    "react": "^19.2.1",
    "react-dom": "^19.2.1"
  },
  "prisma": {
    "seed": "node --loader ts-node/esm prisma/seed.ts"
  }
}
